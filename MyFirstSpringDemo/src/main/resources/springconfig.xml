<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

	
	<bean id="hw" class="com.demo.beans.HelloWorld"></bean>
	
	
	<!-- setter injection -->
	<bean id="u1" class="com.demo.beans.MyUser">
		<property name="uid" value="10"></property>
		<property name="uname" value="akshay"></property>
		<property name="email" value="ak@gmail.com"></property>
		<property name="addr" ref="add1"></property>
	</bean>
	
	<bean id="add1" class="com.demo.beans.Address">
		<property name="street" value="road"></property>
		<property name="city" value="pune"></property>
		<property name="pincode" value="1221122"></property>	
	</bean>
	
	<bean id="u2"  class="com.demo.beans.MyUser">
		<constructor-arg index="0" value="12"></constructor-arg>
		<constructor-arg index="1" value="jay"></constructor-arg>
		<constructor-arg index="2" value="jay@gmai.com"></constructor-arg>
		<constructor-arg index="3" ref="add2"></constructor-arg>
	</bean>
		
		
	<bean id="add2" class="com.demo.beans.Address">
		<constructor-arg index="0" value="sb road"></constructor-arg>
		<constructor-arg index="1" value=" pune"></constructor-arg>	
		<constructor-arg index="2" value="112233"></constructor-arg>
	</bean>
	
</beans>



